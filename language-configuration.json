{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "onEnterRules": [
        {
            "beforeText": "^.*;.*",
            "action": {
                "indent": "outdent"
            }
        },
        {
          "beforeText": "^[^\\s*].*",
          "afterText": ".*;\\s*(?:\\s*//.*)?$",
          "action": { "indent": "indent" }
        }
      ]
}